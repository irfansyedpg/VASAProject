
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_weight="90">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Q_Linerlayout_v"
                android:layout_marginBottom="60dp"
                >

                <!-- TextView A4252 Starts -->
                <android.support.v7.widget.CardView
                    style="@style/Q_CardView">

                    <LinearLayout
                        style="@style/Q_Linerlayout_v"
                        android:id="@+id/ll_A4252_1">

                        <LinearLayout
                            style="@style/Q_Linerlayout_v"
                            android:id="@+id/ll2_A4252">

                            <TextView
                                android:id="@+id/A4252_6"
                                style="@style/TextView"
                                android:text="Illness Phase" />

                            <RadioGroup
                                style="@style/RadioGroup" >

                                <RadioButton
                                    android:id="@+id/rb_A4252_1_1"
                                    style="@style/RadioButton"
                                    android:text="START"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_1_2"
                                    style="@style/RadioButton"
                                    android:text="Mid"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_1_3"
                                    style="@style/RadioButton"
                                    android:text="END"/>

                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/Q_Linerlayout_v"
                            android:id="@+id/ll3_A4252">

                            <TextView
                                android:id="@+id/A4252_8"
                                style="@style/TextView"
                                android:text="What ACTION was taken?" />

                            <RadioGroup
                                style="@style/RadioGroup" >

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_1"
                                    style="@style/RadioButton"
                                    android:text="Home care (own, relative, neighbor, friend)"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_2"
                                    style="@style/RadioButton"
                                    android:text="Traditional or non-formal provider "/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_3"
                                    style="@style/RadioButton"
                                    android:text="Pharmacist or drug seller"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_4"
                                    style="@style/RadioButton"
                                    android:text="Trained community health worker (CHW), nurse, or midwife"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_5"
                                    style="@style/RadioButton"
                                    android:text="Private doctor or clinic (formal/unsure)"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_6"
                                    style="@style/RadioButton"
                                    android:text="NGO or Government Clinic"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_7"
                                    style="@style/RadioButton"
                                    android:text="Hospital"/>

                            </RadioGroup>

                            <LinearLayout
                                style="@style/Q_Linerlayout_v"
                                android:id="@+id/ll4_A4252">

                                <TextView
                                    android:id="@+id/A4252_9"
                                    style="@style/TextView"
                                    android:text="Is this the Place Where" />

                                <CheckBox
                                    android:id="@+id/cb_A4252_2_8"
                                    style="@style/CheckBox"
                                    android:text="Woman Aborted or Delivered at this Provider"/>

                            </LinearLayout>


                            <LinearLayout
                                style="@style/Q_Linerlayout_v"
                                android:id="@+id/ll5_A4252">

                                <TextView
                                    android:id="@+id/A4252_7"
                                    style="@style/TextView"
                                    android:text="What symptoms were present when the action was taken?" />

                                <EditText
                                    android:id="@+id/ed_A4252"
                                    style="@style/EditText_varchar"
                                    android:hint="symptoms"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!-- TextView A4252 Ends -->


            </LinearLayout>

            <!-- E0 Ends  Radio Button-->












        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_weight="10"
        android:weightSum="2"
        android:orientation="horizontal"

        android:layout_margin="3dp"
        >


        <Button
            android:id="@+id/btn_cncl"
            style="@style/Button_collder"

            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:background="#EA4335"

            />
        <Button
            android:id="@+id/btn_sbt"
            style="@style/Button_collder"

            android:layout_weight="1"
            android:textSize="14sp"
            android:text="Submit"

            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"

            />

    </LinearLayout>
</LinearLayout>