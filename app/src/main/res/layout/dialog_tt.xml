
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_weight="90">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Q_Linerlayout_v"
                android:layout_marginBottom="60dp"
                >

                <!-- TextView A4252 Starts -->
                <android.support.v7.widget.CardView
                    style="@style/Q_CardView">

                    <LinearLayout
                        style="@style/Q_Linerlayout_v"
                        android:id="@+id/ll_A4252_1">

                        <LinearLayout
                            style="@style/Q_Linerlayout_v"
                            android:id="@+id/ll2_A4252">

                            <TextView
                                android:id="@+id/A4252_6"
                                style="@style/TextView"
                                android:text="@string/action" />

                            <RadioGroup
                                style="@style/RadioGroup" >

                                <RadioButton
                                    android:id="@+id/rb_A4252_1_1"
                                    style="@style/RadioButton"
                                    android:text="@string/start"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_1_2"
                                    style="@style/RadioButton"
                                    android:text="@string/mid"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_1_3"
                                    style="@style/RadioButton"
                                    android:text="@string/end"/>

                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/Q_Linerlayout_v"
                            android:id="@+id/ll3_A4252">

                            <TextView
                                android:id="@+id/A4252_8"
                                style="@style/TextView"
                                android:text="What ACTION was taken?" />

                            <TextView
                                android:id="@+id/A4252_81"
                                style="@style/TextView"
                                android:text="Other Care" />

                            <RadioGroup
                                style="@style/RadioGroup" >

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_1"
                                    style="@style/RadioButton"
                                    android:text="@string/rb_care1"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_2"
                                    style="@style/RadioButton"
                                    android:text="@string/rb_care2"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_3"
                                    style="@style/RadioButton"
                                    android:text="@string/rb_care3"/>

                                <TextView
                                    android:id="@+id/A4252_82"
                                    style="@style/TextView"
                                    android:text="Health Care Providers" />

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_4"
                                    style="@style/RadioButton"
                                    android:text="@string/rb_care4"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_5"
                                    style="@style/RadioButton"
                                    android:text="@string/rb_care5"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_6"
                                    style="@style/RadioButton"
                                    android:text="@string/rb_care6"/>

                                <RadioButton
                                    android:id="@+id/rb_A4252_2_7"
                                    style="@style/RadioButton"
                                    android:text="@string/rb_care7"/>

                            </RadioGroup>

                            <LinearLayout
                                style="@style/Q_Linerlayout_v"
                                android:id="@+id/ll4_A4252">

                                <CheckBox
                                    android:id="@+id/cb_A4252_2_8"
                                    style="@style/CheckBox"
                                    android:text="@string/cb_place"/>
                            </LinearLayout>


                            <LinearLayout
                                style="@style/Q_Linerlayout_v"
                                android:id="@+id/ll5_A4252">

                                <TextView
                                    android:id="@+id/A4252_7"
                                    style="@style/TextView"
                                    android:text="@string/ed_symptoms" />

                                <EditText
                                    android:id="@+id/ed_A4252"
                                    style="@style/EditText_varchar"
                                    android:hint="@string/explain"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!-- TextView A4252 Ends -->


            </LinearLayout>

            <!-- E0 Ends  Radio Button-->












        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_weight="10"
        android:weightSum="2"
        android:orientation="horizontal"

        android:layout_margin="3dp"
        >


        <Button
            android:id="@+id/btn_cncl"
            style="@style/Button_collder"

            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:background="#EA4335"

            />
        <Button
            android:id="@+id/btn_sbt"
            style="@style/Button_collder"

            android:layout_weight="1"
            android:textSize="14sp"
            android:text="Submit"

            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"

            />

    </LinearLayout>
</LinearLayout>