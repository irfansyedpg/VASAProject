<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/uncolor"
            />
        <TextView
            style="@style/TextView"
            android:text="MONITORING"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"
            android:textColor="#008E45"

            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/hitnscolor" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:scrollbarSize="50dip">
        <!-- Parent layout starts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:orientation="vertical">




            <!-- title -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"


                    >

                    <TextView


                        style="@style/TextView"
                        android:text="DIARRHEA Reasons"
                        android:textStyle="bold"
                        android:textColor="@color/black_overlay"
                        />

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW/CHW explain to the participants/mothers about?"
                        android:textSize="16sp"
                        android:textColor="@color/black_overlay"
                        />



                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- title Ends-->




            <!-- D1 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_DI1"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain to participants about the sign and symptoms of diarrhea?"

                        />


        <EditText


            style="@style/EditText_varchar"
            android:id="@+id/txt_DI1"

            />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- D1 Ends-->
			
			<!-- D2 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_DI2"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain to participants about dysentery?"

                        />


                    <EditText


                        style="@style/EditText_varchar"
                        android:id="@+id/txt_DI2"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- D2 Ends-->
			
			<!-- D3 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_DI3"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain to participants about Low-Osmolarity?"

                        />


                    <EditText


                        style="@style/EditText_varchar"
                        android:id="@+id/txt_DI3"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- D3 Ends-->
			
			<!-- D4 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_DI4"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain to participants about Low- Osmolarity making procedure?"

                        />


                    <EditText


                        style="@style/EditText_varchar"
                        android:id="@+id/txt_DI4"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- D4 Ends-->
			
			<!-- D5 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_DI5"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain about nutrition of child during diarrhea episode?"

                        />


                    <EditText


                        style="@style/EditText_varchar"
                        android:id="@+id/txt_DI5"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- D5 Ends-->
			
			<!-- D6 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_DI6"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain preventions from diarrhea disease?"

                        />


                    <EditText


                        style="@style/EditText_varchar"
                        android:id="@+id/txt_DI6"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- D6 Ends-->
			
			<!-- D7 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_DI7"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain other complications during diarrhea episode?"

                        />


                    <EditText


                        style="@style/EditText_varchar"
                        android:id="@+id/txt_DI7"

                        />



                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- D7 Ends-->
			
			<!-- D8 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_DI8"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain that what step should be taken in case of emergency during diarrhea episode?"

                        />


                    <EditText


                        style="@style/EditText_varchar"
                        android:id="@+id/txt_DI8"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- D8 Ends-->
			
			<!-- D9 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_DI9"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain about Zinc DT?"

                        />


                    <EditText


                        style="@style/EditText_varchar"
                        android:id="@+id/txt_DI9"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- D9 Ends-->
			
			<!-- D10 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_DI10"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain the administration of Low-Osmolarity and Zinc-DT?"

                        />


                    <EditText


                        style="@style/EditText_varchar"
                        android:id="@+id/txt_DI10"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- D10 Ends-->
			
			<!-- D11 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_DI11"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain prohibited the use of antibiotic and Flygyl during diarrhea? "

                        />


                    <EditText


                        style="@style/EditText_varchar"
                        android:id="@+id/txt_DI11"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- D11 Ends-->



            <!-- Button Next Starts-->
            <android.support.v7.widget.CardView
                style="@style/Q_CardView"
                >

                <Button
                    android:id="@+id/btn_next_DI"
                    style="@style/Button_Next"
                    android:layout_margin="10dp"

                    android:text="Next" />
            </android.support.v7.widget.CardView>

            <!-- Button Next Ends-->


        </LinearLayout>

    </ScrollView>


</LinearLayout>
