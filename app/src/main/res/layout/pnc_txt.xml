<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/uncolor"
            />
        <TextView
            style="@style/TextView"
            android:text="MONITORING"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"
            android:textColor="#008E45"

            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/hitnscolor" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:scrollbarSize="50dip">
        <!-- Parent layout starts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:orientation="vertical">


            <!-- Danger Sign title -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"


                    >

                    <TextView


                        style="@style/TextView"
                        android:text="POSTNATAL CARE Reasons"
                        android:textStyle="bold"
                        android:textColor="@color/black_overlay"
                        />
                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW/CHW explain to the participants/mothers about?"
                        android:textSize="16sp"

                        android:textColor="@color/black_overlay"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--Danger Sign  Ends-->






            <!-- P1 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC1"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Immediate care of mother after delivery?"

                        />



                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC1"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P1 Ends-->
			
			<!-- P2 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC2"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Postnatal care schedule of Mother and newborn after delivery? "

                        />



                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC2"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P2 Ends-->

			
			<!-- P3 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC3"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Nutrition of delivered and pre lactating mothers"

                        />


                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC3"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P3 Ends-->





			<!-- P4 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC4"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Severe vaginal bleeding (Post-partum Hemorrhage)?"

                        />


                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC4"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P4 Ends-->
            <!-- Danger Sign title -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"


                    >

                    <TextView


                        style="@style/TextView"
                        android:text="DANGER SIGNS AFTER DELIVERY "
                        android:textStyle="bold"
                        android:textColor="@color/black_overlay"
                        />





                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--Danger Sign  Ends-->
			<!-- P5 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC5"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="High Fever, lower abdominal pain or foul smelling discharge (infection)"

                        />


                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC5"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P5 Ends-->
			
			<!-- P6 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC6"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Severe headache, blurred vision, high blood pressure"

                        />


                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC6"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P6 Ends-->
			
			<!-- P7 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC7"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Convulsions or fits (eclampsia)"

                        />


                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC7"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P7 Ends-->
			
			<!-- P8 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC8"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Heavy vaginal bleeding (PPH)"

                        />


                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC8"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P8 Ends-->
			
			<!-- P9 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC9"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Urinary or fecal incontinence (obstetric fistula)"

                        />


                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC9"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P9 Ends-->
			
			<!-- P10 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC10"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Extreme tiredness, Anemia"

                        />


                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC10"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P10 Ends-->
			
			<!-- P11 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC11"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Anxiety or depression (puerperal psychosis)"

                        />


                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC11"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P11 Ends-->
			
			<!-- P12 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PNC12"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Breast problems (engorgement, sore, cracked bleeding or inverted nipples)"

                        />


                    <EditText
                        style="@style/EditText_varchar"

                        android:id="@+id/txt_PNC12"
                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P12 Ends-->




            <!-- Button Next Starts-->
            <android.support.v7.widget.CardView
                style="@style/Q_CardView"
                >

                <Button
                    android:id="@+id/btn_next_PNC"
                    style="@style/Button_Next"
                    android:layout_margin="10dp"

                    android:text="Next " />
            </android.support.v7.widget.CardView>

            <!-- Button Next Ends-->


        </LinearLayout>

    </ScrollView>


</LinearLayout>
