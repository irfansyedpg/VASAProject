<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".C.C3251_C3288_B">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.irfansyed.VAS.VASMonitring.C.C3251_C3288_B" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fadeScrollbars="false"
            android:fillViewport="true"
            android:paddingBottom="5sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:scrollbarSize="10dip">

            <LinearLayout style="@style/Q_Linerlayout_v">


                <!-- EditText study_id Starts -->
                <android.support.v7.widget.CardView style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/ll_study_id"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/txt_study_id" />

                        <com.santalu.widget.MaskEditText
                            android:id="@+id/ed_study_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/txt_study_id"
                            android:clickable="false"
                            android:focusable="false"
                            android:inputType="date"
                            app:met_mask="####-###-##" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <!-- EditText study_id Ends -->

                <!-- Radio Buttons C3253 Starts -->
                <android.support.v7.widget.CardView style="@style/Q_CardView">

                    <LinearLayout style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/txt_C3253" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/ll_C3253_1"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextViewHead"
                            android:text="@string/txt_C3253_1" />

                        <RadioGroup
                            android:id="@+id/rg_C3253_1"
                            style="@style/RadioGroup">

                            <RadioButton
                                android:id="@+id/rb_C3253_1_1"
                                style="@style/RadioButton"
                                android:text="@string/rb_C3253_1_1" />

                            <RadioButton
                                android:id="@+id/rb_C3253_1_2"
                                style="@style/RadioButton"
                                android:text="@string/rb_C3253_1_2" />

                            <RadioButton
                                android:id="@+id/rb_C3253_1_3"
                                style="@style/RadioButton"
                                android:text="@string/rb_C3253_1_3" />

                        </RadioGroup>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/ll_C3253"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextViewHead"
                            android:text="@string/txt_C3253_2" />

                        <RadioGroup style="@style/RadioGroup">

                            <RadioButton
                                android:id="@+id/rb_C3253_A_1"
                                style="@style/RadioButton"
                                android:text="@string/rb_C3253_2A" />

                            <RadioButton
                                android:id="@+id/rb_C3253_A_2"
                                style="@style/RadioButton"
                                android:text="@string/rb_C3253_2B" />

                            <RadioButton
                                android:id="@+id/rb_C3253_A_3"
                                style="@style/RadioButton"
                                android:text="@string/rb_C3253_2C" />

                            <TextView
                                style="@style/TextViewHead"
                                android:text="@string/txt_C3253_3" />

                            <RadioButton
                                android:id="@+id/rb_C3253_A_4"
                                style="@style/RadioButton"
                                android:text="@string/rb_C3253_3A" />

                            <RadioButton
                                android:id="@+id/rb_C3253_A_5"
                                style="@style/RadioButton"
                                android:text="@string/rb_C3253_3B" />

                            <RadioButton
                                android:id="@+id/rb_C3253_A_6"
                                style="@style/RadioButton"
                                android:text="@string/rb_C3253_3C" />

                            <RadioButton
                                android:id="@+id/rb_C3253_A_7"
                                style="@style/RadioButton"
                                android:text="@string/rb_C3253_3D" />

                        </RadioGroup>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/ll_C3253_3E_2A"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextViewHead"
                            android:text="@string/txt_C3253_2" />

                        <CheckBox
                            android:id="@+id/cb_C3253_3E_2A"
                            style="@style/CheckBox"
                            android:text="@string/cb_C3253_3E_2A" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/ll_C3253_4"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextViewHead"
                            android:text="@string/txt_C3253_4" />

                        <EditText
                            android:id="@+id/ed_C3253_4"
                            style="@style/EditText_varchar"
                            android:hint="@string/txt_C3253_4" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!-- Radio Buttons C3253 Ends -->

                <!--  = = = = =  END OF FORM FIELDS  = = = = = -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_AddMore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="#1ed61e"
                        android:onClick="@{() -> callback.BtnAddMore()}"
                        android:text="ADD MORE ACTIONS"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_Continue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/black_overlay"
                        android:onClick="@{() -> callback.BtnContinue()}"
                        android:text="@string/next" />
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>