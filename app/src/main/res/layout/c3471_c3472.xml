<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:scrollbarSize="50dip">
        <!-- Parent layout starts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:orientation="vertical">


            <!-- EditText C3471 Starts -->
            <android.support.v7.widget.CardView style="@style/Q_CardView">


                <LinearLayout
                    android:id="@+id/ll_C3471"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        android:id="@+id/txt_C3471"
                        style="@style/TextView"
                        android:text="@string/txt_C3471" />

                    <EditText
                        android:id="@+id/ed_C3471"
                        style="@style/EditText_varchar" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- EditText C3471 Ends -->

            <!--C3472 Radio Button and Edit text Starts -->
            <android.support.v7.widget.CardView style="@style/Q_CardView">

                <LinearLayout
                    android:id="@+id/ll_C3472"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        android:id="@+id/txt_C3472"
                        style="@style/TextView"
                        android:text="@string/txt_C3472" />


                    <RadioGroup style="@style/RadioGroup"

                        >

                        <RadioButton

                            android:id="@+id/rb_C3472_1"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_1" />

                        <RadioButton

                            android:id="@+id/rb_C3472_2"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_2" />

                        <RadioButton

                            android:id="@+id/rb_C3472_3"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_3" />

                        <RadioButton

                            android:id="@+id/rb_C3472_4"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_4" />

                        <RadioButton

                            android:id="@+id/rb_C3472_5"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_5" />

                        <RadioButton

                            android:id="@+id/rb_C3472_6"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_6" />

                        <RadioButton

                            android:id="@+id/rb_C3472_7"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_7" />

                        <RadioButton

                            android:id="@+id/rb_C3472_8"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_8" />

                        <RadioButton

                            android:id="@+id/rb_C3472_9"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_9" />

                        <RadioButton

                            android:id="@+id/rb_C3472_10"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_10" />

                        <RadioButton

                            android:id="@+id/rb_C3472_11"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_11" />

                        <RadioButton

                            android:id="@+id/rb_C3472_DK"
                            style="@style/RadioButton"
                            android:text="@string/rb_C3472_DK" />

                    </RadioGroup>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--C3472 Radio Button and Edit text Ends-->


            <Button
                android:id="@+id/btn_next"
                style="@style/Button_collder"
                android:layout_margin="10dp"
                android:text="Next" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>