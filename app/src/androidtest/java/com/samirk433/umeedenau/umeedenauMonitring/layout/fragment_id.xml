<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.irfansyed.umeedenau.umeedenauMonitring.IdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="IDENTIFICATION"
            android:textColor="@color/text_hard"
            android:textSize="16dp"
            android:textStyle="bold" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                style="@style/TextView"
                                android:id="@+id/text_frag_id_sno"


                                android:text="Serial Number" />

                            <EditText
                                android:id="@+id/ed_serilano"
                                android:layout_width="fill_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                style="@style/EditText_varchar"
                                android:hint="Serial Number "
                                android:focusable="false"
                                android:textSize="14dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:weightSum="3"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/TextView"

                                    android:text="Province"
                                    android:layout_weight="2"
                                    android:id="@+id/textView8" />

                                <Spinner
                                    android:id="@+id/spin_frag_id_province"

                                    style="@style/Spiner"
                                    android:layout_weight="1"

                                     />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                >

                                <TextView
                                    style="@style/TextView"
                                    android:layout_weight="2"
                                    android:text="District"
                                    android:id="@+id/textView9" />

                                <Spinner
                                    android:id="@+id/spin_frag_id_district"
                                    android:layout_weight="1"
                                    style="@style/Spiner"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <TextView
                                    android:layout_weight="2"
                                    style="@style/TextView"
                                    android:text="Tehsil" />

                                <Spinner
                                    android:id="@+id/spin_frag_id_tehsil"
                                   style="@style/Spiner"

                                    android:layout_weight="1"

                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <TextView

                                    style="@style/TextView"
                                    android:text="UC"
                                    android:layout_weight="2"
                                    />

                                <Spinner
                                    android:id="@+id/spin_frag_id_uc"
                                     style="@style/Spiner"
                                    android:layout_weight="1"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView

                                    style="@style/TextView"
                                    android:layout_weight="2"
                                    android:text="Location"
                                    android:id="@+id/textView10" />

                                <Spinner
                                    android:id="@+id/spin_frag_id_location"
                                     style="@style/Spiner"
                                    android:layout_weight="1"/>
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/text_frag_id_hno"

                                    style="@style/EditText_varchar"
                                    android:hint="House Number"
                                   />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/text_frag_id_street"

                                    style="@style/EditText_varchar"
                                    android:hint="Steet Name "
                                     />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/text_frag_id_mohala"

                                    style="@style/EditText_varchar"
                                    android:hint="Block/Mohala "
                                   />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/text_frag_id_village"

                                    style="@style/EditText_varchar"
                                    android:hint="Area/Village "
                                    />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/text_frag_id_town"


                                    style="@style/EditText_varchar"
                                    android:hint="Town Name"
                                    />
                            </android.support.design.widget.TextInputLayout>


                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/text_frag_id_hh"

                                    style="@style/EditText_varchar"
                                    android:hint="Name of House Head"
                                   />
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btn_frag_id_next"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:layout_margin="10dp"
                            android:background="@color/btn_color"
                            android:textColor="#fff"
                            android:text="Next" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>
